    <LinearLayout
        android:id="@+id/linearTop"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="@dimen/margin_70dp"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/relativeChange"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center|left">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_profilePic"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:padding="@dimen/margin_5dp"
                android:src="@drawable/group_icon"
                app:civ_border_color="#00000000"
                app:civ_border_width="0dp" />

            <LinearLayout
                android:id="@+id/ll_userfields"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toLeftOf="@+id/view_career"
                android:layout_toRightOf="@+id/iv_profilePic"
                android:gravity="center|left|top"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/userNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="1 Member Select"
                    android:textColor="@color/ud_blue"
                    android:textSize="15dp"
                    android:textStyle="bold" />


            </LinearLayout>

            <RelativeLayout

                android:id="@+id/view_career"
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/margin_5dp"
                android:background="@drawable/chat_right"
                android:padding="@dimen/margin_5dp"
                android:paddingLeft="10dp">


                <TextView
                    android:id="@+id/tv_country"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:maxLength="8"
                    android:padding="@dimen/margin_5dp"
                    android:text="Create"
                    android:textColor="@color/white"
                    android:textSize="13dp" />

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"

                android:layout_alignParentBottom="true"
                android:background="@color/gray_back" />
        </RelativeLayout>

    </LinearLayout>

    <GridView

        android:id="@+id/grid_view_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear"
        android:numColumns="1"></GridView>
    <!--  <include layout="@layout/content_chat_list" />-->

</RelativeLayout>
