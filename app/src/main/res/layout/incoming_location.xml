<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:emojicon="http://schemas.android.com/apk/res-auto"
    xmlns:mapbox="http://schemas.android.com/tools"
    android:id="@+id/incoming_location_relative"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <FrameLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/alignmentRelative"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/margin200dp"
            android:layout_below="@+id/outgoingName"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:layout_marginTop="@dimen/dime_5dp"
            android:layout_marginRight="@dimen/margin_100dp"

            android:gravity="center"
            android:orientation="vertical">


            <com.makeramen.roundedimageview.RoundedImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/incoming_map_image_IV"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin200dp"
                android:layout_marginLeft="@dimen/margin_5dp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="@dimen/margin_5dp"
                android:scaleType="centerCrop"
                android:src="@drawable/fake_mapmin"
                app:riv_corner_radius="15dip"
                app:riv_mutate_background="true"
                app:riv_oval="false"
                app:riv_tile_mode="repeat" />

            <ImageView
                android:layout_width="@dimen/dime_40dp"
                android:layout_height="@dimen/dime_40dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/location" />
            <!--     <com.google.android.gms.maps.MapView
                     android:id="@+id/incoming_location_map"
                     android:layout_width="match_parent"
                     android:layout_height="@dimen/margin200dp"
                     android:layout_marginLeft="@dimen/margin_5dp"
                     android:layout_marginTop="2dp"
                     android:layout_marginRight="2dp"
                     android:layout_marginBottom="@dimen/margin_5dp"></com.google.android.gms.maps.MapView>
            -->
            <View
                android:id="@+id/incoming_view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin200dp"

                ></View>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/outgoing_text"

                android:weightSum="1">

                <TextView
                    android:id="@+id/incoming_location_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/incoming_location_time"
                    android:layout_marginLeft="@dimen/margin_10dp"
                    android:layout_marginRight="@dimen/margin_10dp"
                    android:layout_marginBottom="5dp"
                    android:maxLines="2"
                    android:text="Indorre Liasd  hajbdf lhasdf ghbasdf  basdfb hhbhasd f bhasddf bhjas dfgb hjasfg b hlasd fba sf jhb alsfhhjafghasdfasdfasdf"
                    android:textColor="@color/black"
                    android:textSize="10sp" />


                <TextView
                    android:id="@+id/incoming_location_time"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/margin_15dp"
                    android:layout_marginRight="@dimen/margin_10dp"
                    android:layout_marginBottom="5dp"
                    android:text="12.00 pm"
                    android:textColor="@color/grey"
                    android:textSize="10sp" />


            </RelativeLayout>
        </RelativeLayout>
    </FrameLayout>

</RelativeLayout>

