<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/black"

android:orientation="vertical">

<FrameLayout
    android:layout_width="match_parent"
    android:background="@color/black"

    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/black"

        android:layout_height="match_parent">



        <android.support.v4.view.ViewPager
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:id="@+id/ogAppbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="#7F000000"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="visible"
            android:weightSum="1">

            <ImageView
                android:id="@+id/imageBack"
                android:layout_width="@dimen/margin_25dp"
                android:layout_height="@dimen/margin_25dp"
                android:layout_gravity="center"
                android:scaleType="centerInside"
                android:src="@drawable/back_arrow" />


            <RelativeLayout
                android:id="@+id/chatName"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight=".71"

                android:gravity="center|left"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/nameTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left|bottom"
                    android:gravity="center|left"
                    android:singleLine="true"
                    android:text="Back"
                    android:textColor="#FFF"
                    android:textSize="14sp"
                    android:textStyle="bold" />


            </RelativeLayout>

            <ImageView

                android:id="@+id/setting"
                android:layout_width="0dp"
                android:layout_height="@dimen/margin_25dp"
                android:layout_gravity="end|center_vertical"
                android:layout_weight=".29"
                android:scaleType="centerInside"
                android:src="@drawable/menu_inactive" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#7F000000"
            android:gravity="center"
            android:visibility="visible"
            android:orientation="horizontal"
            android:padding="@dimen/dime_5dp"
            android:weightSum="4"
            android:id="@+id/linear_bottom_layout"
            >

            <LinearLayout
                android:id="@+id/scanLinear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"

                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/dime_30dp"
                    android:layout_height="@dimen/dime_30dp"

                    android:src="@drawable/scan" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Scan"
                    android:textColor="#FFF"

                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/forwardLinear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="29dp"
                    android:layout_height="@dimen/dime_30dp"

                    android:src="@drawable/forward" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Forward"
                    android:textColor="#FFF"

                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/saveLinear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/dime_30dp"
                    android:layout_height="@dimen/dime_30dp"

                    android:src="@drawable/save" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Save"
                    android:textColor="#FFF"

                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/deleteLinear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/dime_30dp"
                    android:layout_height="@dimen/dime_30dp"

                    android:src="@drawable/delete_image" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Delete"
                    android:textColor="#FFF"

                    />

            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
</FrameLayout>
</RelativeLayout>