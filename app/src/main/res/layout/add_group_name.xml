<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DCDCDC"

    android:orientation="vertical"

    >


    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_50dp"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_weight="0.3"
            android:gravity="left">

            <ImageView
                android:layout_width="110dp"

                android:layout_height="wrap_content"
                android:src="@drawable/ud_text_logo"
                android:visibility="visible" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:visibility="gone">

            <ImageView
                android:id="@+id/iv_search"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:layout_toLeftOf="@+id/iv_add_user"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"
                android:src="@drawable/search_white" />


            <ImageView
                android:id="@+id/iv_add_user"
                android:layout_width="25dp"
                android:layout_height="27dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"
                android:src="@drawable/dots" />

        </RelativeLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear">

        <RelativeLayout
            android:background="#DCDCDC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="sans-serif-light"
                    android:gravity="center"
                    android:padding="@dimen/margin_10dp"
                    android:text="Create Business Group"
                    android:textColor="@color/black"
                    android:textSize="15dp" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="@dimen/margin_100dp"
                    android:layout_height="@dimen/margin_100dp"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:padding="@dimen/margin_5dp"
                    android:id="@+id/groupIcon"
                    android:src="@drawable/team"
                    app:civ_border_color="@color/black"
                    app:civ_border_width="0.5dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="sans-serif-light"
                    android:gravity="center"
                    android:padding="@dimen/margin_10dp"
                    android:text="Add name, description and
icon for your group"
                    android:textColor="@color/black"
                    android:textSize="15dp" />

                <LinearLayout
                    android:padding="@dimen/margin_5dp"
                    android:layout_marginTop="@dimen/margin_5dp"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/EdtNameGroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dime_40dp"
                        android:layout_marginRight="@dimen/margin_20dp"
                        android:background="@null"
                        android:backgroundTint="@null"
                        android:padding="@dimen/dime_5dp"
                        android:hint="Group Name"
                        android:textColorHint="#DDDDDD"

                        android:textColor="@color/black"
                        android:textSize="17dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:padding="@dimen/margin_5dp"
                    android:layout_marginTop="@dimen/margin_5dp"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/EdtDescriptionGroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dime_40dp"
                        android:layout_marginRight="@dimen/margin_20dp"
                        android:background="@null"
                        android:backgroundTint="@null"
                        android:hint="Description"
                        android:textColorHint="#DDDDDD"
                        android:padding="@dimen/dime_5dp"

                        android:textColor="@color/black"
                        android:textSize="17dp" />
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="sans-serif-light"
                    android:gravity="center"
                    android:paddingTop="@dimen/dime_10dp"
                    android:textColor="@color/white"
                    android:textSize="15dp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="sans-serif-light"
                    android:gravity="center"
                    android:paddingTop="@dimen/margin_5dp"
                    android:text="To Select your group member click next"
                    android:textColor="@color/black"
                    android:textSize="15dp" />

                <Button
                    android:id="@+id/btnAddGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    android:text="Next"
                    android:layout_marginTop="@dimen/margin_20dp"
                    android:textColor="@color/white"
                    android:textSize="15dp" />
            </LinearLayout>
        </RelativeLayout>

    </ScrollView>
</RelativeLayout>